    %meta{:name=>"author", :content=>"Austin Flores"}
    %meta{:name=>"keywords", :content=>"Ctrl4ltdeleteme, portfolio, Austin Flores, blog"}
    %meta{:'http-equiv'=>"Content-Type", :content=>"text/html; charset=utf-8"}
    %meta{:name=>"google-site-verification",:content=>"LVaZcDWC-XvEg2q_GnbnMdCd04kcl230qQswuv2Rk2M"}
    %title Ctrl4ltdeleteme - Blog
    = stylesheet_link_tag 'reset', 'application'
